# Silent-NAS Docker 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# ==================== 全局配置 ====================
COMPOSE_PROJECT_NAME=silent-nas

# ==================== NATS 配置 ====================
NATS_PORT=4222
NATS_HTTP_PORT=8222
NATS_MAX_PAYLOAD=10485760

# ==================== 节点 1 配置 ====================
NODE1_ID=node-1
NODE1_GRPC_PORT=9000
NODE1_HTTP_PORT=8080
NODE1_WEBDAV_PORT=8081
NODE1_S3_PORT=9001

# ==================== 节点 2 配置 ====================
NODE2_ID=node-2
NODE2_GRPC_PORT=9010
NODE2_HTTP_PORT=8090
NODE2_WEBDAV_PORT=8091
NODE2_S3_PORT=9011

# ==================== 节点 3 配置 ====================
NODE3_ID=node-3
NODE3_GRPC_PORT=9020
NODE3_HTTP_PORT=8100
NODE3_WEBDAV_PORT=8101
NODE3_S3_PORT=9021

# ==================== 同步配置 ====================
AUTO_SYNC=true
SYNC_INTERVAL=60
MAX_FILES_PER_SYNC=100
HEARTBEAT_INTERVAL=10
NODE_TIMEOUT=30

# ==================== S3 凭证 ====================
S3_ACCESS_KEY=admin
S3_SECRET_KEY=password123

# ==================== 版本控制 ====================
VERSION_ENABLED=true
MAX_VERSIONS=10
RETENTION_DAYS=30

# ==================== 日志级别 ====================
RUST_LOG=info
# 可选值: trace, debug, info, warn, error
